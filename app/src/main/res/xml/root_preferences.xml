<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General Settings">

        <SwitchPreferenceCompat
            app:key="notifications_enabled"
            app:title="Enable Notifications"
            app:summary="Toggle to enable or disable app notifications"
            app:defaultValue="true" />

        <ListPreference
            app:key="sync_frequency"
            app:title="Sync Frequency"
            app:summary="%s"
            app:entries="@array/sync_frequency_entries"
            app:entryValues="@array/sync_frequency_values"
            app:defaultValue="60" />

    </PreferenceCategory>

</PreferenceScreen>