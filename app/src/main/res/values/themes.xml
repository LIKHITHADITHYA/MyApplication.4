<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/warm_primary</item>
        <item name="colorPrimaryVariant">@color/warm_primary_dark</item>
        <item name="colorOnPrimary">@color/warm_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm_secondary</item>
        <item name="colorSecondaryVariant">@color/warm_secondary_variant</item>
        <item name="colorOnSecondary">@color/warm_on_secondary</item>

        <!-- Background and Surface colors -->
        <item name="android:colorBackground">@color/warm_background</item>
        <item name="colorSurface">@color/warm_surface</item>
        <item name="colorOnBackground">@color/warm_on_background</item>
        <item name="colorOnSurface">@color/warm_on_surface</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>