<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/warm_primary</item>
        <item name="colorPrimaryDark">@color/warm_primary_dark</item> <!-- AppCompat uses colorPrimaryDark -->
        <item name="colorOnPrimary">@color/warm_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/warm_secondary</item> <!-- AppCompat uses colorAccent for secondary -->
        <item name="colorOnSecondary">@color/warm_on_secondary</item>

        <!-- Background and Surface colors -->
        <item name="android:colorBackground">@color/warm_background</item>
        <item name="colorSurface">@color/warm_surface</item> <!-- AppCompat has this -->
        <item name="colorOnBackground">@color/warm_on_background</item>
        <item name="colorOnSurface">@color/warm_on_surface</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
</resources>